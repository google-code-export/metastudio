<propertysheet title="Isosurface renderer settings">
    <propertygroup name="General">
      <property name="fillPolygons"
                displayName="Fill Polygons :"
                mnemonicChar="F"
                tooltipText="Specify if you want to fill the polygons."
                get="true"
                set="true"
                defaultUI="true" />              
      <property name="fillTransperency"
                displayName="Fill Transperency :"
                mnemonicChar="T"
                tooltipText="Specify the transperency if fill polygons is true."
                get="true"
                set="true"
                defaultUI="false" />
    </propertygroup>
    <propertygroup name="RIB Generation">
      <property name="generateRIBVertexNormals"
                displayName="Generate RIB Vertex Normals :"
                mnemonicChar="N"
                tooltipText="Specifies whether vetrex normals need to be generated when exporting to a RIB file."
                get="true"
                set="true"
                defaultUI="true" />              
    </propertygroup>
</propertysheet> 
